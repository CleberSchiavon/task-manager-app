{
  "extends": "tsconfig/nestjs.json",
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "types/*": ["./src/types/*"],
      "shared/*": ["./src/shared/*"],
      "modules/*": ["./src/modules/*"],
    },
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
